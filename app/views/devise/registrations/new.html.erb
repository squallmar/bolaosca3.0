<div class="row justify-content-center mt-5">
  <div class="col-md-6 col-lg-4">
    <div class="card shadow">
      <div class="card-body p-4">
        <h2 class="card-title text-center mb-4">Criar conta</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "needs-validation", novalidate: true }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="mb-3">
            <%= f.label :email, "E-mail", class: "form-label" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true %>
          </div>

          <div class="mb-3">
            <%= f.label :password, "Senha", class: "form-label" %>
            <% if @minimum_password_length %>
              <small class="text-muted">(m√≠nimo de <%= @minimum_password_length %> caracteres)</small>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control", required: true %>
          </div>

          <div class="mb-4">
            <%= f.label :password_confirmation, "Confirme sua senha", class: "form-label" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", required: true %>
          </div>

          <div class="d-grid gap-2">
            <%= f.submit "Cadastrar", class: "btn btn-primary btn-lg" %>
          </div>
        <% end %>

        <hr class="my-4">

        <div class="text-center">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>