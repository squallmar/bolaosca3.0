<% if controller_name != 'sessions' %>
  <%= link_to "Já tem uma conta? Faça login", new_session_path(resource_name), class: "btn btn-outline-primary" %>
<% end %>

<% if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Criar nova conta", new_registration_path(resource_name), class: "btn btn-outline-secondary" %>
<% end %>

<% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Esqueceu sua senha?", new_password_path(resource_name), class: "btn btn-link mt-2" %>
<% end %>