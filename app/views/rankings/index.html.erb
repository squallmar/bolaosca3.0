<div class="container mt-4">
  <h1 class="text-center mb-4">Classificação dos Jogadores</h1>

  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead class="table-dark">
        <tr>
          <th scope="col">Posição</th>
          <th scope="col">Jogador</th>
          <th scope="col">Pontuação</th>
          <th scope="col">Acertos</th>
          <th scope="col">Palpites</th>
        </tr>
      </thead>
      <tbody>
        <% @rankings.each_with_index do |user, index| %>
          <tr>
            <th scope="row"><%= index + 1 %></th>
            <td>
              <%# Usando o email como identificação temporária %>
              <i class="bi bi-person-circle me-2"></i>
              <%= user.email.split('@').first.capitalize %>
            </td>
            <td><%= user.total_points || 0 %></td>
            <td><%= user.correct_bets_count || 0 %></td>
            <td><%= user.bets_count || 0 %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <% if @rankings.empty? %>
    <div class="alert alert-info text-center">
      Nenhum jogador encontrado na classificação.
    </div>
  <% end %>
</div>