<div class="container py-4">
  <h2 class="mb-4">
    <i class="bi bi-flag-fill"></i> Lançar Resultado: 
    <%= @match.home_team.name %> vs <%= @match.away_team.name %>
  </h2>

  <%= form_with url: result_update_admin_match_path(@match), method: :patch do |f| %>
    <div class="card">
      <div class="card-body">
        <div class="row align-items-center">
          <div class="col-md-5 text-center">
            <h4><%= @match.home_team.name %></h4>
            <%= image_tag @match.home_team.logo_url, class: 'team-logo mb-3' %>
            <%= f.number_field :home_score, class: 'form-control text-center', min: 0 %>
          </div>

          <div class="col-md-2 text-center">
            <h3>X</h3>
          </div>

          <div class="col-md-5 text-center">
            <h4><%= @match.away_team.name %></h4>
            <%= image_tag @match.away_team.logo_url, class: 'team-logo mb-3' %>
            <%= f.number_field :away_score, class: 'form-control text-center', min: 0 %>
          </div>
        </div>
      </div>
      <div class="card-footer text-end">
        <%= link_to 'Cancelar', admin_matches_path, class: 'btn btn-secondary' %>
        <%= f.submit 'Lançar Resultado', class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
</div>