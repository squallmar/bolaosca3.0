<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Campeonatos Cadastrados</h1>
    <%= link_to "Novo Campeonato", new_admin_championship_path, class: "btn btn-success" %>
  </div>

  <% if notice.present? %>
    <div class="alert alert-success"><%= notice %></div>
  <% end %>

  <div class="card">
    <div class="card-body">
      <table class="table table-striped table-hover">
        <thead class="thead-dark">
          <tr>
            <th>Nome</th>
            <th>Status</th>
            <th>Data de Início</th>
            <th class="text-end">Ações</th>
          </tr>
        </thead>
        <tbody>
          <% @championships.each do |championship| %>
            <tr>
              <td><%= championship.name %></td>
              <td>
                <span class="badge <%= championship.active? ? 'bg-success' : 'bg-secondary' %>">
                  <%= championship.active? ? 'Ativo' : 'Inativo' %>
                </span>
              </td>
              <td><%= l(championship.start_date, format: :long) if championship.start_date %></td>
              <td class="text-end">
                <div class="btn-group" role="group">
                  <%= link_to "Visualizar", admin_championship_path(championship), class: "btn btn-info btn-sm" %>
                  <%= link_to "Editar", edit_admin_championship_path(championship), class: "btn btn-primary btn-sm" %>
                  <%= link_to "Deletar", admin_championship_path(championship), 
                      method: :delete, 
                      data: { confirm: "Tem certeza que deseja excluir o campeonato #{championship.name}?" }, 
                      class: "btn btn-danger btn-sm" %>

                <td>
                <span class="badge <%= championship.active? ? 'bg-success' : 'bg-secondary' %>">
                    <%= championship.status %>
                </span>
                </td>
            </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="d-flex justify-content-center mt-4">
    <%= paginate @championships if @championships.respond_to?(:total_pages) %>
  </div>
</div>