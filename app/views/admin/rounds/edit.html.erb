<%# app/views/admin/rounds/edit.html.erb %>

<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold text-gray-800 mb-6">Editar Rodada <%= @round.number %></h1>

  <%= render 'form', round: @round %>

  <div class="mt-6">
    <%= link_to 'Visualizar Rodada', admin_round_path(@round), class: 'btn btn-light' %>
    <%= link_to 'Voltar para Rodadas', admin_rounds_path, class: 'btn btn-light ml-2' %>
  </div>
</div>