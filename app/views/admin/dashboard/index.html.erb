<div class="container py-4">
  <h1 class="mb-4">
    <i class="bi bi-speedometer2"></i> Painel Administrativo
  </h1>

  <!-- Cards de Estatísticas -->
  <div class="row mb-4">
    <div class="col-md-3">
      <div class="card text-white bg-primary">
        <div class="card-body">
          <h5 class="card-title">Usuários</h5>
          <p class="display-6"><%= @stats[:total_users] %></p>
          <small><%= @stats[:active_users] %> ativos esta semana</small>
        </div>
      </div>
    </div>

    <div class="col-md-3">
      <div class="card text-white bg-success">
        <div class="card-body">
          <h5 class="card-title">Partidas</h5>
          <p class="display-6"><%= @stats[:upcoming_matches] %></p>
          <small>próximas</small>
        </div>
      </div>
    </div>

    <div class="col-md-3">
      <div class="card text-white bg-warning">
        <div class="card-body">
          <h5 class="card-title">Palpites</h5>
          <p class="display-6"><%= @stats[:pending_bets] %></p>
          <small>pendentes</small>
        </div>
      </div>
    </div>
  </div>

  <!-- Seção de Usuários Recentes -->
  <div class="card mb-4">
    <div class="card-header">
      <h5><i class="bi bi-people-fill"></i> Usuários Recentes</h5>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th>ID</th>
              <th>Email</th>
              <th>Cadastro</th>
              <th>Último Acesso</th>
            </tr>
          </thead>
          <tbody>
            <% @recent_users.each do |user| %>
              <tr>
                <td><%= user.id %></td>
                <td><%= user.email %></td>
                <td><%= l(user.created_at, format: :short) %></td>
                <td><%= user.last_sign_in_at ? l(user.last_sign_in_at, format: :short) : 'Nunca' %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- Seção de Próximas Partidas -->
  <div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h5><i class="bi bi-calendar-event"></i> Próximas Partidas</h5>
      <%= link_to 'Nova Partida', new_admin_match_path, class: 'btn btn-sm btn-success' %>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th>Campeonato</th>
              <th>Partida</th>
              <th>Data</th>
              <th>Ações</th>
            </tr>
          </thead>
          <tbody>
            <% @recent_matches.each do |match| %>
              <tr>
                <td><%= match.championship.name %></td>
                <td><%= match.team_a %> vs <%= match.team_b %></td>
                <td><%= l(match.match_date, format: :long) %></td>
                <td>
                  <%= link_to 'Editar', edit_admin_match_path(match), class: 'btn btn-sm btn-primary' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>