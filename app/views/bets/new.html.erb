<div class="container my-4">
  <div class="card shadow-sm border-0 mx-auto" style="max-width: 480px;">
    <div class="card-header bg-primary text-white text-center py-4">
      <div class="d-flex justify-content-center align-items-center gap-4">
        <% if @match.team_a_logo.attached? %>
          <%= image_tag @match.team_a_logo.variant(resize_to_fill: [48, 48]), class: "rounded-circle border border-white team-logo" %>
        <% end %>

        <div class="text-center team-vs">
          <div class="vs-text">VS</div>
          <div class="teams-names">
            <strong><%= @match.team_a.name %></strong> 
            <span class="mx-2">x</span> 
            <strong><%= @match.team_b.name %></strong>
          </div>
        </div>

        <% if @match.team_b_logo.attached? %>
          <%= image_tag @match.team_b_logo.variant(resize_to_fill: [48, 48]), class: "rounded-circle border border-white team-logo" %>
        <% end %>
      </div>
    </div>

    <div class="card-body p-4">
      <%= form_with model: [@match, @bet], local: true do |f| %>
        <div class="score-inputs d-flex justify-content-between align-items-center gap-3">
          <div class="mb-3 flex-fill">
            <label class="form-label small fw-semibold d-flex align-items-center gap-2">
              <% if @match.team_a_logo.attached? %>
              <% end %>
              Gols do <%= @match.team_a.name %>
            </label>
            <%= f.number_field :guess_a, class: "form-control form-control-sm text-center", min: 0 %>
          </div>

          <div class="mb-3 flex-fill">
            <label class="form-label small fw-semibold d-flex align-items-center gap-2">
              <% if @match.team_b_logo.attached? %>
              <% end %>
              Gols do <%= @match.team_b.name %>
            </label>
            <%= f.number_field :guess_b, class: "form-control form-control-sm text-center", min: 0 %>
          </div>
        </div>

        <div class="d-grid mt-3">
          <%= f.submit "Salvar Palpite", class: "btn btn-success btn-sm" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<style>
/* Container do card do palpite */
.container.my-4 {
  max-width: 600;
  margin: 2rem auto;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  color: #f0f0f0;
}

/* Card customizado */
.card.shadow-sm.border-0.mx-auto {
  background: linear-gradient(135deg, #0b3d91, #0a2647);
  border-radius: 16px;
  box-shadow: 0 8px 20px rgba(10, 38, 71, 0.7);
  border: none !important;
}

/* Header do card */
.card-header.bg-primary.text-white.text-center.py-4 {
  background: #142850 !important;
  border-top-left-radius: 16px;
  border-top-right-radius: 16px;
  box-shadow: inset 0 -3px 8px #0b3d91;
  font-weight: 700;
  letter-spacing: 1.2px;
  padding-top: 1.5rem !important;
  padding-bottom: 1.5rem !important;
}

/* Imagens dos times no header */
.team-logo {
  width: 50px;
  height: 50px;
  object-fit: cover;
  box-shadow: 0 0 8px #ffd700cc;
  transition: transform 0.3s ease;
  border: 2.5px solid #fff;
  cursor: default;
}

.team-logo:hover {
  transform: scale(1.15);
  box-shadow: 0 0 16px #ffd700ff;
}

/* Div que contém "VS" e nomes dos times */
.team-vs {
  user-select: none;
  color: #ffd700;
  text-shadow: 0 0 8px #ffd700cc;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* Texto "VS" maior e destacado */
.vs-text {
  font-size: 2.4rem;
  font-weight: 900;
  letter-spacing: 4px;
  margin-bottom: 0.2rem;
}

/* Nomes dos times abaixo do VS */
.teams-names strong {
  font-size: 13px;
  font-weight: 700;
  text-shadow: 0 0 6px #ffd700aa;
  user-select: text;
  color: #fff;
}

.teams-names .mx-2 {
  color: #ffd700;
  font-weight: 900;
  user-select: none;
}

/* Corpo do card */
.card-body.p-4 {
  padding: 1.5rem 2rem !important;
  background: #1b3a77;
  border-bottom-left-radius: 16px;
  border-bottom-right-radius: 16px;
  box-shadow: inset 0 4px 10px #0a2647;
}

/* Inputs lado a lado */
.score-inputs {
  gap: 1rem;
}

/* Labels dos inputs */
.form-label.small.fw-semibold.d-flex.align-items-center.gap-2 {
  font-weight: 600;
  font-size: 0.9rem;
  color: #e1e8f0;
  margin-bottom: 0.4rem;
  user-select: none;
}

/* Imagens pequenas nos labels */
.form-label img.rounded-circle {
  width: 24px;
  height: 24px;
  object-fit: cover;
  box-shadow: 0 0 6px #0b3d91;
  border: 1.5px solid #fff;
}

/* Inputs de número */
.form-control.form-control-sm.text-center {
  background: #0b3d91;
  border: none;
  border-radius: 10px;
  color: #fff;
  font-weight: 700;
  box-shadow: inset 0 2px 8px #0a2647;
  transition: background-color 0.3s ease, box-shadow 0.3s ease;
  font-size: 1.2rem;
  padding: 0.25rem 0;
  height: 44px;
}

.form-control.form-control-sm.text-center:focus {
  background: #142850;
  box-shadow: 0 0 14px #ffd700;
  color: #ffd700;
  outline: none;
}

/* Botão salvar */
.btn.btn-success.btn-sm {
  background-color: #28a745;
  border: none;
  font-weight: 700;
  font-size: 1.1rem;
  border-radius: 14px;
  box-shadow: 0 0 14px #28a745cc;
  transition: background-color 0.3s ease, box-shadow 0.3s ease;
  padding: 0.5rem 0;
}

.btn.btn-success.btn-sm:hover {
  background-color: #1e7e34;
  box-shadow: 0 0 22px #28a745ff;
  color: #e6ffe6;
  text-shadow: 0 0 8px #0008;
}

</style>