<div class="container my-4">
  <div class="card shadow-sm border-0 mx-auto" style="max-width: 480px;">
    <div class="card-header bg-primary text-white text-center py-3">
      <div class="d-flex justify-content-center align-items-center gap-2 flex-wrap">
        <% if @match.team_a_logo.attached? %>
          <%= image_tag @match.team_a_logo.variant(resize_to_fill: [24, 24]), class: "rounded-circle border border-white" %>
        <% end %>
        <strong><%= @match.team_a %></strong>
        <span class="text-light">vs</span>
        <strong><%= @match.team_b %></strong>
        <% if @match.team_b_logo.attached? %>
          <%= image_tag @match.team_b_logo.variant(resize_to_fill: [24, 24]), class: "rounded-circle border border-white" %>
        <% end %>
      </div>
    </div>

    <div class="card-body p-3">
      <%= form_with model: [@match, @bet], local: true do |f| %>
        <div class="mb-3">
          <label class="form-label small fw-semibold d-flex align-items-center gap-2">
            <% if @match.team_a_logo.attached? %>
              <%= image_tag @match.team_a_logo.variant(resize_to_fill: [20, 20]), class: "rounded-circle" %>
            <% end %>
            Gols do <%= @match.team_a %>
          </label>
          <%= f.number_field :guess_a, class: "form-control form-control-sm text-center", min: 0 %>
        </div>

        <div class="mb-3">
          <label class="form-label small fw-semibold d-flex align-items-center gap-2">
            <% if @match.team_b_logo.attached? %>
              <%= image_tag @match.team_b_logo.variant(resize_to_fill: [20, 20]), class: "rounded-circle" %>
            <% end %>
            Gols do <%= @match.team_b %>
          </label>
          <%= f.number_field :guess_b, class: "form-control form-control-sm text-center", min: 0 %>
        </div>

        <div class="d-grid">
          <%= f.submit "Salvar Palpite", class: "btn btn-success btn-sm" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
